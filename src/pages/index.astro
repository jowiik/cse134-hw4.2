---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Home" description="Welcome to my simple Astro blog">
	<div class="home-container">
		<h1>Welcome</h1>
		
		<p>This is a simple Astro static site with two main pages:</p>
		
		<div class="links">
			<a href="/about" class="link-card">
				<h2>About →</h2>
				<p>Learn more about this site and its features</p>
			</a>
			
			<a href="/blog" class="link-card">
				<h2>Blog →</h2>
				<p>Read my latest blog posts</p>
			</a>
		</div>
	</div>
</MainLayout>

<style>
	.home-container {
		text-align: center;
		padding: 2rem 0;
	}
	
	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--accent);
	}
	
	.home-container > p {
		font-size: 1.2rem;
		margin-bottom: 3rem;
		color: inherit;
	}
	
	.links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 600px;
		margin: 0 auto;
	}
	
	.link-card {
		background: white;
		border: 2px solid rgb(var(--gray-light));
		padding: 2rem;
		text-decoration: none;
		color: inherit;
		transition: border-color 0.2s, transform 0.2s;
		/* NO border-radius */
	}
	
	.link-card:hover {
		border-color: var(--accent);
		transform: translateY(-2px);
	}
	
	.link-card h2 {
		color: var(--accent);
		margin: 0 0 0.5rem 0;
	}
	
	.link-card p {
		margin: 0;
		color: rgb(var(--gray));
	}
</style>
